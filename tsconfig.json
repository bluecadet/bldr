{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}